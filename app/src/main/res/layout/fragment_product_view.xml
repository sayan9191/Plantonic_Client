<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.productDetailsScreen.ProductViewFragment">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/product_details_toolbar_background"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_btn_icon"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/productDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"

            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/productDetailsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@color/green"/>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/productImages"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:iss_auto_cycle="true"
                app:iss_delay="2000"
                app:iss_period="2000"
                android:src="@drawable/face_icon">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/shareBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="78dp"
                    app:borderWidth="0dp"
                    android:backgroundTint="@color/white"
                    android:foregroundTint="@color/light_green"
                    android:foreground="@drawable/share_icon"
                    android:foregroundGravity="center"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/favouriteBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    app:borderWidth="0dp"
                    android:layout_marginTop="328dp"
                    android:backgroundTint="@color/white"
                    android:foreground="@drawable/favorite_icon"
                    android:foregroundTint="@color/light_green"
                    android:foregroundGravity="center"/>
            </com.denzcoskun.imageslider.ImageSlider>

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:textSize="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Product Name"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="10dp"
               android:paddingTop="10dp"
               android:paddingBottom="15dp"
               android:paddingEnd="20dp"
               android:paddingStart="20dp"
               android:background="@drawable/offer_background"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:layout_marginTop="5dp"
                   android:text="Launching offer"
                   />

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:id="@+id/linearLayout"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"

                       android:layout_gravity="start"

                       android:orientation="horizontal"
                       android:weightSum="3"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/discount"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <TextView
                           android:id="@+id/productPrice"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="â‚¹ 500/-"

                           android:textColor="@color/black"
                           android:textSize="20sp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/realPrice"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginLeft="15dp"
                           android:background="@drawable/striking_text"
                           android:text="999/-"
                           android:textSize="20dp" />

                   </LinearLayout>

                   <TextView
                       android:id="@+id/discount"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:background="@drawable/offer_background"
                       android:backgroundTint="@color/white"
                       android:gravity="end"
                       android:padding="7dp"

                       android:text="10% off"
                       android:textColor="@color/black"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

               </androidx.constraintlayout.widget.ConstraintLayout>




           </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/bag_icon"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text=" Select Quantity"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/border_layout"
                android:layout_gravity="start">

                <TextView
                    android:id="@+id/decrease"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="#B5B5B5"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/integer_number"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="19sp"
                    />

                <TextView
                    android:id="@+id/increase"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@color/green"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:drawableStart="@drawable/description_icon"
                android:text=" Description"/>

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Product description"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textSize="18dp"
                android:layout_marginBottom="100dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/addToCartBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/light_green"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="ADD TO CART"
            />


    <ProgressBar
        android:id="@+id/productDetailsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="10dp" />


</RelativeLayout>